@using NguyenMinhHung_2001230322_Bai10.Models
@{
    var gh = (GioHang)Session["gh"];
    var kh = (tbl_KhachHang)Session["kh"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Web Bán Sách</title>

    <!-- Bootstrap (tuỳ chọn) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- CSS riêng -->
    <link rel="stylesheet" href="~/Content/shop.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">BookStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="topnav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("XemGioHang","Home")">
                            Giỏ hàng (@(gh?.TongSLHang() ?? 0))
                        </a>
                    </li>
                </ul>
                <div class="d-flex text-white">
                    @if (kh == null)
                    {
                        <a class="btn btn-outline-light btn-sm" href="@Url.Action("DangNhap","Home")">Đăng nhập</a>
                    }
                    else
                    {
                        <span class="me-2">Chào bạn, <b>@kh.TenKH</b></span>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("DangXuat","Home")">Thoát</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 text-center text-muted">
        © @DateTime.Now.Year – Web Bán Sách (MVC)
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
